  éŸ¿ã‘ï¼ãƒ¦ãƒ¼ãƒ•ã‚©ãƒ‹ã‚¢ãƒ ,éŸ¿ã‘ï¼ãƒ¦ãƒ¼ãƒ•ã‚©ãƒ‹ã‚¢ãƒ ,éŸ¿ã‘ï¼ãƒ¦ãƒ¼ãƒ•ã‚©ãƒ‹ã‚¢ãƒ ,éŸ¿ã‘ï¼ãƒ¦ãƒ¼ãƒ•ã‚©ãƒ‹ã‚¢ãƒ 
EOS
   exit 0
  }
}

function perse_com(){
  if [[ -z "${1}" ]]; then
    usage
  elif [[ "${1}" == prim ]]; then
    prim
  elif [[ "${1}" == camb ]]; then
    camb
  elif [[ "${1}" == divi ]]; then
    divi
  elif [[ "${1}" == inv ]]; then
    inv
  elif [[ "${1}" == ngram ]]; then
    ngram
  elif [[ "${1}" == stalin ]]; then
    stalin
  elif [[ "${1}" == rpt ]]; then
    rpt
  else
    error
  fi
}

{
 perse_com "${@}"
}